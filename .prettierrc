{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": ["^svelte(.*)$", "^\\$app/(.*)$", "^\\$lib/(.*)$", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.svx",
			"options": {
				"parser": "markdown",
                "proseWrap": "always"
			}
		}
	],
	"tailwindStylesheet": "./src/app.css"
}
